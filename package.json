{
  "name": "learning-htmx-01",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "homepage": "https://learning-htmx-01.pages.dev/",
  "scripts": {
    "dev": "vite",
    "build": "bun run build:client && bun run build:server",
    "build:server": "vite build",
    "build:client": "vite build --mode client",
    "preview": "wrangler pages dev",
    "deploy": "bun run build && wrangler pages deploy",
    "cft": "wrangler types --env-interface CloudflareBindings",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "clean": "git clean -xdf dist debug.log",
    "db:generate": "bun --env-file=../../.env run drizzle-kit generate",
    "db:migrate": "bun --env-file=../../.env run drizzle-kit migrate",
    "db:push": "bun run db:generate && wrangler d1 migrations apply learning-htmx-01 --local",
    "db:push:prod": "bun run db:generate && bun run db:migrate"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.1",
    "@paralleldrive/cuid2": "^2.2.2",
    "@rollup/plugin-inject": "^5.0.5",
    "class-variance-authority": "^0.7.0",
    "drizzle-orm": "^0.36.1",
    "hono": "^4.6.9",
    "htmx.org": "2.0.3",
    "node-snackbar": "^0.1.16",
    "tailwind-merge": "^2.5.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240529.0",
    "@eslint/compat": "^1.2.2",
    "@eslint/js": "^9.14.0",
    "@hono/vite-build": "^1.0.0",
    "@hono/vite-dev-server": "^0.15.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.9.0",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.28.0",
    "eslint": "^9.14.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-import": "^2.31.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.14",
    "typed-htmx": "^0.3.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0",
    "vite": "^5.2.12",
    "vite-tsconfig-paths": "^5.1.0",
    "wrangler": "^3.57.2"
  }
}
